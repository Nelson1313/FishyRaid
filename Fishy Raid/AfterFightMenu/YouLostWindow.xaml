<Window x:Class="AfterFightMenu.YouLostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AfterFightMenu"
        mc:Ignorable="d"
        Title="YouLostWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid x:Name="myGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2" Grid.Row="1">
            <Label Padding="10"  Foreground="Gold" FontSize="30" Content="You Have Lost this Battle!" HorizontalAlignment="Center" FontFamily="Showcard Gothic" FontWeight="Normal" FontStyle="Normal"/>
            <Button Padding="10" Margin="30" x:Name="menu" Content="Back to Menu" Click="Button_Click" HorizontalAlignment="Center" Width="200" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
