<Window x:Class="AfterFightMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AfterFightMenu"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowState="Maximized">
    <Grid x:Name="myGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Label Padding="10" Foreground="Black" FontSize="30" Content="You Have won this Battle!" HorizontalAlignment="Center" FontFamily="Showcard Gothic" FontWeight="Normal" FontStyle="Normal"/>
            <Label FontSize="30" Padding="10" x:Name="Xp" ContentStringFormat="Xp Gained: {0}" HorizontalAlignment="Center"/>
            <Button BorderThickness="0" Padding="10" x:Name="menu" Content="Back to Menu" Click="Button_Click" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="400" Height="60"/>
        </StackPanel>
    </Grid>
</Window>
